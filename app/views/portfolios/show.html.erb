<div class="container portfolio-container">
	<div class="row">
		<div class="col-md-7">
			<%= image_tag portfolio_img(@portfolio_item.thumb_image_url, 'main') %>
		</div>
		<div class="col-md-5">
			<h1><%= @portfolio_item.title %></h1>

			<em><%= @portfolio_item.subtitle %></em>
			<hr>

			
			<p><%= @portfolio_item.body %></p>

			<h2>Technologies Used:</h2>
			<% @portfolio_item.technologies.each do |t| %>
			<p>
				<%= t.name %>
			</p>
			<% end %>

			<%= link_to 'Edit', edit_portfolio_path(@portfolio_item) %> |
			<%= link_to 'Back', portfolios_path %> |
			<%= link_to 'Delete Post', @portfolio_item.destroy, method: :delete, data: { confirm: 'Are you sure?' } %>

		</div>
	</div>
	
</div>


